{{ 'fireworkx-hero.css' | asset_url | stylesheet_tag }}

<div class="fwx-hero canopy">
    <div class="fwx-hero-heading">
      <div class="page-width">
        {% if template.name == 'collection' %}
          <h1> {{ collection.title }} </h1>
        {% elsif template.name == 'page' %}
          <h1> {{ page.title }} </h1>
        {% endif %}
      </div>
    </div>
    <div class="page-width fwx-hero-content">
      <div class="fwx-hero-section">
          <div class="fwx-hero-snippet">
            {% render 'fireworkx-need-help-or-quote' %}
          </div>
          <img class="canopy-image" src="{{ section.settings.collection_hero_image | image_url: width: 550 }}" width="550" height="" alt="collection image">   
      </div>
    </div>
</div>

{% schema %}
{
  "name": "Fireworkx Collection Hero",
  "tag": "section",
  "class": "fireworkx-hero",
  "settings": [
    {
        "type": "image_picker",
        "id": "collection_hero_image",
        "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Fireworkx Collection Hero"
    }
  ]
}
{% endschema %}